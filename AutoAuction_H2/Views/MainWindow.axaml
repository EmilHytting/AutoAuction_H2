<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:AutoAuction_H2.Views.ContentPanels"
        x:Class="AutoAuction_H2.Views.MainWindow"
        Width="800" Height="600"
        SystemDecorations="None"
        ExtendClientAreaToDecorationsHint="True"
        ExtendClientAreaChromeHints="NoChrome"
        ExtendClientAreaTitleBarHeightHint="-1"
        TransparencyLevelHint="AcrylicBlur,Transparent,Blur"
        Background="Transparent">

	<Border Background="Transparent" PointerPressed="Border_PointerPressed">
		<ContentControl x:Name="MainContent"/>
	</Border>
</Window>
