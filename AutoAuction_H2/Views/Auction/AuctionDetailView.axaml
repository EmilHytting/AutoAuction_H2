<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="AutoAuction_H2.Views.Auction.AuctionDetailView"
			 >
	
  <Border CornerRadius="12" Background="{StaticResource PanelBackgroundBrush}" Padding="16">
    <Grid ColumnDefinitions="*,2*" RowDefinitions="Auto,* ,Auto" ColumnSpacing="16" RowSpacing="12">
      <Image Source="avares://AutoAuction_H2/Assets/BackgroundImage.png" Stretch="UniformToFill" Opacity="0.2" IsHitTestVisible="False" Grid.ColumnSpan="2" Grid.RowSpan="3"/>

      <StackPanel Grid.Column="0" Grid.Row="0" Grid.RowSpan="2" Spacing="8">
        <TextBlock Text="Auction info" FontWeight="SemiBold"/>
        <Border Background="{StaticResource CardBackgroundBrush}" Height="220"/>
        <ItemsControl ItemsSource="{Binding BidHistory}">
          <ItemsControl.ItemTemplate>
            <DataTemplate>
              <TextBlock Text="{Binding}"/>
            </DataTemplate>
          </ItemsControl.ItemTemplate>
        </ItemsControl>
      </StackPanel>

      <StackPanel Grid.Column="1" Grid.Row="0" Spacing="8">
        <TextBlock Text="{Binding Item.Name}" FontSize="26" FontWeight="Bold"/>
        <TextBlock Text="{Binding Item.ClosingDate, StringFormat='Closing {0:dd/MM/yy}'}" FontSize="18" HorizontalAlignment="Right"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Spacing="8">
          <TextBlock Text="Current bid:" FontSize="22"/>
          <TextBlock Text="{Binding Item.CurrentBid, StringFormat='DKK {0:N0}'}" FontSize="22" FontWeight="Bold"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Spacing="8">
          <Button Content="Accept" Classes="success" IsVisible="{Binding IsSeller}" Command="{Binding AcceptBidCommand}" Width="120"/>
          <Button Content="Make a bid" Classes="accent" IsVisible="{Binding IsBuyer}" Click="MakeBid_Click" Width="120"/>
        </StackPanel>
        <TextBlock Foreground="Tomato" TextWrapping="Wrap" Text="{Binding ErrorMessage}"/>
      </StackPanel>

      <StackPanel Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Left">
        <Button Content="Back" Command="{Binding BackCommand}" Width="120"/>
      </StackPanel>
    </Grid>
  </Border>
</UserControl>
