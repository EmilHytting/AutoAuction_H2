<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:AutoAuction_H2.ViewModels"
             x:Class="AutoAuction_H2.Views.HomeScreenView"
             x:DataType="vm:HomeScreenViewModel">

	<Grid Margin="5" ShowGridLines="True">
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="*"/>
		</Grid.RowDefinitions>
		<StackPanel>
			<TextBlock Text="Dine aktioner" FontSize="25" FontWeight="Bold" />
			<TextBlock Text="{Binding MockAuctions.Count}" FontSize="25" FontWeight="Bold" />
		</StackPanel>


		<DataGrid
            ItemsSource="{Binding MockAuctions}"
            IsReadOnly="True"
            GridLinesVisibility="All"
            AutoGenerateColumns="True" />
	</Grid>
</UserControl>
