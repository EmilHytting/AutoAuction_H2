<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:views="clr-namespace:AutoAuction_H2.Views"
             xmlns:content="clr-namespace:AutoAuction_H2.Views.ContentPanels"
             xmlns:auction="clr-namespace:AutoAuction_H2.Views.Auction"
             xmlns:vm="clr-namespace:AutoAuction_H2.ViewModels"
             x:Class="AutoAuction_H2.Views.ContentPanelView"
             Background="Transparent"
             Width="600"
			 Height="510">

	<UserControl.DataTemplates>
		<!-- Show auction overview -->
		<DataTemplate DataType="vm:AuctionOverviewViewModel">
			<content:AuctionOverviewView/>
		</DataTemplate>

		<!-- Show auction detail -->
		<DataTemplate DataType="vm:AuctionDetailViewModel">
			<auction:AuctionDetailView/>
		</DataTemplate>
	</UserControl.DataTemplates>

	<Border Background="Transparent"
            CornerRadius="10,0,0,0"
            BorderThickness="2,2,0,0"
            BorderBrush="Snow">

		<!-- Still bind to CurrentContent on MainViewModel -->
		<ContentControl Content="{Binding DataContext.CurrentContent,
                                          RelativeSource={RelativeSource AncestorType=views:MainView}}" />
	</Border>
</UserControl>
