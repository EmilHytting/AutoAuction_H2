<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:views="clr-namespace:AutoAuction_H2.Views"
             xmlns:vm="clr-namespace:AutoAuction_H2.ViewModels"
             xmlns:cp="clr-namespace:AutoAuction_H2.Views.ContentPanels"
             xmlns:av="clr-namespace:AutoAuction_H2.Views.Auction"
             x:Class="AutoAuction_H2.Views.ContentPanelView"
             Background="Transparent"
             Width="600"
             Height="380">

    <UserControl.DataTemplates>
        <DataTemplate DataType="vm:HomeScreenViewModel">
            <views:HomeScreenView />
        </DataTemplate>
        <DataTemplate DataType="vm:AuctionOverviewViewModel">
            <cp:AuctionOverviewView />
        </DataTemplate>
        <DataTemplate DataType="vm:Auction.AuctionDetailViewModel">
            <av:AuctionDetailView />
        </DataTemplate>
    </UserControl.DataTemplates>

	<Border Background="Transparent" CornerRadius="10,0,0,0" BorderThickness="2,2,0,0" BorderBrush="Snow">
		<ContentControl Content="{Binding CurrentContent}" />	</Border>
</UserControl>
