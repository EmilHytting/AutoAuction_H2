<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:AutoAuction_H2.ViewModels"
             xmlns:views="clr-namespace:AutoAuction_H2.Views.UIElements"
             x:Class="AutoAuction_H2.Views.LeftPanelView"
             x:DataType="vm:MainViewModel"
             Width="220">

	<Border Background="Transparent" CornerRadius="10">
		<Grid RowDefinitions="Auto,*">

			<!-- Menu + søgning -->
			<StackPanel Grid.Row="0" Spacing="0" HorizontalAlignment="Center">
				<!-- Hjem -->
				<Button Width="180" Margin="5" Command="{Binding ShowHomeCommand}">
					<StackPanel Orientation="Horizontal" Spacing="8">
						<TextBlock Text="🏠"/>
						<TextBlock Text="Hjem"/>
					</StackPanel>
				</Button>

				<!-- Alle Auktioner -->
				<Button Width="180" Margin="5" Command="{Binding ShowAuctionOverviewCommand}">
					<StackPanel Orientation="Horizontal" Spacing="8">
						<TextBlock Text="📋"/>
						<TextBlock Text="Alle Auktioner"/>
					</StackPanel>
				</Button>

				<!-- Private Biler -->
				<Button Width="180" Margin="5" Command="{Binding ShowPrivateCarsCommand}">
					<StackPanel Orientation="Horizontal" Spacing="8">
						<TextBlock Text="🚗"/>
						<TextBlock Text="Private Biler"/>
					</StackPanel>
				</Button>

				<!-- Erhvervsbiler -->
				<Button Width="180" Margin="5" Command="{Binding ShowProfessionalCarsCommand}">
					<StackPanel Orientation="Horizontal" Spacing="8">
						<TextBlock Text="🚙"/>
						<TextBlock Text="Erhvervsbiler"/>
					</StackPanel>
				</Button>

				<!-- Lastbiler -->
				<Button Width="180" Margin="5" Command="{Binding ShowTrucksCommand}">
					<StackPanel Orientation="Horizontal" Spacing="8">
						<TextBlock Text="🚛"/>
						<TextBlock Text="Lastbiler"/>
					</StackPanel>
				</Button>

				<!-- Busser -->
				<Button Width="180" Margin="5" Command="{Binding ShowBusesCommand}">
					<StackPanel Orientation="Horizontal" Spacing="8">
						<TextBlock Text="🚌"/>
						<TextBlock Text="Busser"/>
					</StackPanel>
				</Button>

				<!-- Mine Bud -->
				<Button Width="180" Margin="5" Command="{Binding ShowMyBidsCommand}">
					<StackPanel Orientation="Horizontal" Spacing="8">
						<TextBlock Text="🖐"/>
						<TextBlock Text="Mine Bud"/>
					</StackPanel>
				</Button>

				<!-- Mine Salg -->
				<Button Width="180" Margin="5" Command="{Binding ShowMySalesCommand}">
					<StackPanel Orientation="Horizontal" Spacing="8">
						<TextBlock Text="💼"/>
						<TextBlock Text="Mine Salg"/>
					</StackPanel>
				</Button>

				<!-- Sæt til salg -->
				<Button Width="180" Margin="5" Command="{Binding ShowCreateAuctionCommand}">
					<StackPanel Orientation="Horizontal" Spacing="8">
						<TextBlock Text="➕"/>
						<TextBlock Text="Sæt til salg"/>
					</StackPanel>
				</Button>

				<!-- Søgning -->
				<TextBox Width="180" Margin="5,10,5,0"
                         Watermark="🔍 Søg..."
                         Text="{Binding SearchText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
			</StackPanel>

			<!-- Profil nederst -->
			<views:UserProfileView Grid.Row="1" />
		</Grid>
	</Border>
</UserControl>
