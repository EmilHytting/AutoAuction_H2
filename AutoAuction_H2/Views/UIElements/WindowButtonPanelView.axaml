<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="AutoAuction_H2.Views.WindowButtonPanelView"
             Background="Transparent"
             Width="100"
             Height="70">

	<Grid ShowGridLines="False">
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="*"/>
			<ColumnDefinition Width="*"/>
			<ColumnDefinition Width="*"/>
		</Grid.ColumnDefinitions>

		<Grid.RowDefinitions>
			<RowDefinition Height="*"/>
			<RowDefinition Height="*"/>

		</Grid.RowDefinitions>

		<!-- Minimize button -->
		<Border Grid.Column="1"
				Grid.Row="0"
				Width="30" Height="30"
				CornerRadius="15"
				Background="Transparent"
				ClipToBounds="True">

			<Image Source="avares://AutoAuction_H2/Assets/MinimizeLogo.png"
				   Stretch="Uniform"
				   Cursor="Hand"
				   PointerPressed="MinimizeImage_PointerPressed"/>
		</Border>


		<!-- Close button -->
		<Border Grid.Column="2"
				Grid.Row="0"
				Width="30" Height="30"
				CornerRadius="15"
				Background="Transparent"
				ClipToBounds="True">

			<Image Source="avares://AutoAuction_H2/Assets/CloseLogo.png"
				   Stretch="Uniform"
				   Cursor="Hand"
				   PointerPressed="CloseImage_PointerPressed"/>
		</Border>

	</Grid>
</UserControl>
