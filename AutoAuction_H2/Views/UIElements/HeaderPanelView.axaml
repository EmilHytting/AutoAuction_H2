<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="AutoAuction_H2.Views.HeaderPanelView"
             Background="Transparent"
			 Width="500"
			 Height="70">

	<Border Background="Transparent" CornerRadius="10" Margin="5">
		<Grid ColumnDefinitions="*,Auto" VerticalAlignment="Center">
            <TextBlock Text="Header"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"
                       Foreground="White"
                       FontSize="18"
                       FontWeight="Bold"/>
            <Button Grid.Column="1"
                    Margin="8,0,0,0"
                    Content="Vis auktion (demo)"
                    Classes="accent"
                    Command="{Binding ShowAuctionDetailCommand}"/>
        </Grid>
	</Border>
</UserControl>
